{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@x-ear/core": [
        "./packages/core/src"
      ],
      "@x-ear/ui-web": [
        "./packages/ui-web/src"
      ],
      "@x-ear/ui-native": [
        "./packages/ui-native/src"
      ]
    }
  },
  "include": [],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage"
  ],
  "references": [
    {
      "path": "./packages/core"
    },
    {
      "path": "./packages/ui-web"
    },
    {
      "path": "./packages/ui-native"
    },
    {
      "path": "./apps/web"
    },
    {
      "path": "./apps/mobile"
    },
    {
      "path": "./apps/admin"
    }
  ]
}