# Environment Configuration for X-Ear CRM
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=super-secret-jwt-key-for-development

# Database Configuration
DATABASE_URL=sqlite:///instance/xear_crm.db

# Redis Configuration (for OTP and rate limiting)
REDIS_URL=redis://localhost:6379/0

# Email Configuration (for OTP fallback)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Cloudflare Turnstile Configuration
# Get these from: https://dash.cloudflare.com/profile/api-tokens
TURNSTILE_SITE_KEY=0x4AAAAAAA1234567890ABCDEF  # Replace with your actual site key
TURNSTILE_SECRET_KEY=0x4AAAAAAA1234567890ABCDEF1234567890ABCDEF  # Replace with your actual secret key

