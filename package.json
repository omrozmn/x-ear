{
  "name": "x-ear",
  "version": "1.0.0",
  "description": "X-EAR CRM - İşitme Cihazı Hasta Yönetim Sistemi",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cd apps/web && npm run dev",
    "dev:web": "cd apps/web && npm run dev",
    "dev:backend": "cd apps/backend && python app.py",
    "build": "cd apps/web && npm run build",
    "build:web": "cd apps/web && npm run build",
    "test": "cd apps/web && npm run test",
    "lint": "cd apps/web && npm run lint",
    "typecheck": "cd apps/web && npm run type-check",
    "clean": "rm -rf apps/web/node_modules apps/web/dist",
    "gen:api": "cd apps/web && npm run gen:api",
    "db:migrate": "cd apps/backend && python -m alembic upgrade head",
    "db:migration": "cd apps/backend && python -m alembic revision --autogenerate",
    "backend:setup": "cd apps/backend && pip install -r requirements.txt"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@types/node": "^20.10.0",
    "chromatic": "^13.3.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-plugin-boundaries": "^5.1.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
